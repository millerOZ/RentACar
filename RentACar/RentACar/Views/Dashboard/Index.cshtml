@model IEnumerable<RentACar.Data.Entities.User>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <h3 class="text-muted">Dashboard</h3>
</div>


<div class="container-fluid">
    <div class="row text-center">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Reservas <span class="badge bg-light text-dark">@ViewBag.ReservesCount</span></h5> <i class="fa-solid fa-3x fa-cart-shopping"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Reserves")>Ver Reservas</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Vehiculos <span class="badge bg-light text-dark">@ViewBag.ProductsCount</span> </h5> <i class="fa-solid fa-3x fa-tags"></i></div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Vehicles")>Ver Vehiculos</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Usuarios <span class="badge bg-light text-dark">@ViewBag.UsersCount</span> </h5>  <i class="fa-solid fa-3x fa-users"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Users")>Ver Usuarios</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Nuevas Reservas <span class="badge bg-light text-dark">@ViewBag.NewReservesCount</span></h5> <i class="fa-solid fa-3x fa-cart-shopping"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Reserves")>Ver Reservas</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Reservas Confirmadas <span class="badge bg-light text-dark">@ViewBag.ConfirmeReservesCount</span></h5> <i class="fa-solid fa-3x fa-clock"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Reserves")>Ver Reservas</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Vehiculos Reservados<span class="badge bg-light text-dark">@ViewBag.VehiclesReservesCount</span> </h5> <i class="fa-solid fa-3x fa-tags"></i></div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Vehicles")>Ver Vehiculos</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between"><h5>Vehiculos Disponibles <span class="badge bg-light text-dark">@ViewBag.VehiclesDispCount</span> </h5>  <i class="fa-solid fa-3x fa-users"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Users")>Ver Vehiculos</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

<script type="text/javascript">
    $(document).ready(function () {
        $('#TempTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
                [25, 50, 100, 200, -1],
                [25, 50, 100, 200, "Todos"]
            ]
        });
    });
</script>
    }
