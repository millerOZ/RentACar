@model RentACar.Data.Entities.Reserve

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Reservar</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DateReserve" class="control-label"></label>
                <input asp-for="DateReserve" class="form-control" />
                <span asp-validation-for="DateReserve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStartReserve" class="control-label"></label>
                <input asp-for="DateStartReserve" class="form-control" />
                <span asp-validation-for="DateStartReserve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinishReserve" class="control-label"></label>
                <input asp-for="DateFinishReserve" class="form-control" />
                <span asp-validation-for="DateFinishReserve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceFinishReserve" class="control-label"></label>
                <input asp-for="PlaceFinishReserve" class="form-control" />
                <span asp-validation-for="PlaceFinishReserve" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StartReserve" /> @Html.DisplayNameFor(model => model.StartReserve)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  class="btn btn-outline-success">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
