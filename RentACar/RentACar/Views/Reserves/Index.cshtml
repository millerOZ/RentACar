@model IEnumerable<RentACar.Data.Entities.Reserve>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reservas</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DateReserve)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateStartReserve)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateFinishReserve)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PlaceFinishReserve)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartReserve)
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateReserve)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateStartReserve)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateFinishReserve)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlaceFinishReserve)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartReserve)
                                </td>
                              
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
                [25, 50, 100, 200, -1],
                [25, 50, 100, 200, "Todos"]
            ]
        });
    });
</script>
}