@model IEnumerable<RentACar.Data.Entities.User>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Nuevo Administrador</a>
</p>
<div class="row row-cols-1 row-cols-md-4 g-4 mt-1">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card bg-light h-100">
                    <h5 class="card-header text-center"><i class="fa-solid fa-user-gear"></i>@Html.DisplayFor(modelItem => item.UserType)</h5>
                    <div class="card-body bg-info bg-gradient p-2 text-dark bg-opacity-50">
                        <div class="text-center zoom">
                            <img src="@item.ImageFullPath" style="width:100px; height:100px; border-radius:50px" class="text-center" />
                        </div>
                        <div class="card-body text-center">
                            <p class="card-text smfnt">Nombre:   @item.FullName</p>
                            <p class="card-text smfnt">E-Mail:   @item.Email</p>
                            <p class="card-text smfnt">Documento:   @item.Document</p>
                            <p class="card-text smfnt">Teléfono:    @item.Phone</p>
                            <h5 class="card-text smfnt">Habilitado: @Html.DisplayFor(modelItem => item.EmailConfirmed)</h5>
                        </div>
                        <div class="card-footer text-center">
                        </div>
                    </div>
                </div>
            </div>

        }
    }
    else
    {
        <h3>No hay usuarios registrados</h3>
    }
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
