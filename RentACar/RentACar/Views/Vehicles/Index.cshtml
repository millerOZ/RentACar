<div class="row row-cols-1 row-cols-md-4 g-4 mt-1">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card bg-light h-100">
                    <h5 class="card-header text-center"><i class="fa-solid fa-user-gear"></i>@Html.DisplayFor(modelItem => item.Plaque)</h5>
                    <div class="card-body bg-info bg-gradient p-2 text-dark bg-opacity-50">
                        <div class="text-center zoom">
                            <img src="@item.ImageFullPath" style="width:100px; height:100px; border-radius:50px" class="text-center" />
                        </div>
                        <div class="card-body text">
                            <p class="card-text smfnt">Serie:   @item.Serie</p>
                            <p class="card-text smfnt">Marca:   @item.Brand</p>
                            <p class="card-text smfnt">Valor Diario:   @item.PriceDay</p>
                            <p class="card-text smfnt">Descripción:    @item.Description</p>
                            <p class="card-text smfnt">Categorías:    @item.CategoriesNumber</p>
                            <p class="card-text smfnt">Fotos:    @item.ImagesNumber</p>
                        </div>
                        <div class="col mt-3 text-center">
                             <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Borrar</a>
                        </div>

                        <div class="card-footer text-center">
                        </div>
                    </div>
                </div>
            </div>

        }
    }
    else
    {
        <h3>No hay usuarios registrados</h3>
    }
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
