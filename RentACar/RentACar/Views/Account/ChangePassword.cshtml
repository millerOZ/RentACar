@model RentACar.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="calign-items-4  offset-md-4">
        <div class="card bg-light mb-3" style="width: 450px; height: 330px">
            <h5 class="card-header text-center"><i class="fa-solid fa-user-gear"></i> Cambiar Contraseña</h5>
            <div class="card-body bg-info bg-gradient p-2 text-dark bg-opacity-75">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="OldPassword"></label>
                        <input asp-for="OldPassword" type="password" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-secondary"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-secondary"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Confirm"></label>
                        <input asp-for="Confirm" type="password" class="form-control" />
                        <span asp-validation-for="Confirm" class="text-secondary"></span>
                    </div>

                    <div class="form-group mt-3 text-center">
                        <button input type="submit" value="ChangePassword" class="btn btn-primary btn-block"><i class="fa-solid fa-user-pen"></i>Guardar</button>
                        <a asp-action="ChangeUser" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-rotate-left"></i>Regresar</a>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-transparent text-center">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

